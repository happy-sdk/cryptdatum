{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "happy-sdk/cryptdatum",
    "rootDir": "docs"
  },
  "files": [
    {
      "location": ".vitepress/config/{en,fr,ru}.js",
      "pattern": ".vitepress/config/@lang.js",
      "type": "universal"
    },
    {
      "location": "**/*.md",
      "pattern": "content/@lang/@path",
      "type": "universal"
    }
  ],
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "Française",
      "lang": "fr"
    },
    {
      "label": "Русский",
      "lang": "ru"
    }
  ],
  "outDir": ".vitepress/dist/_translations",
  "ignoreKeywords": ["lunaria-ignore"]
}
